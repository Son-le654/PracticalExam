@model PracticalExam.Models.Book
@{
    ViewBag.Title = "Create";
}

@using (Html.BeginForm(actionName: "Create", controllerName: "Book", method: FormMethod.Post))
{
    <br />
    <div class="form-group row">
        <label for="id" class="col-sm-2 col-form-label">Title</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.Title, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group row">
        <label for="author" class="col-sm-2 col-form-label">Author</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.Author, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group row">
        <label for="publisher" class="col-sm-2 col-form-label">Publisher</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.Publisher, new { @class = "form-control" })

        </div>
    </div>
    <div class="form-group row">
        <label for="genre" class="col-sm-2 col-form-label">Genre</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.Genre, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group row">
        <label for="price" class="col-sm-2 col-form-label">Price</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.Price, new { @class = "form-control" })
        </div>
    </div>
    <button type="submit">Create</button>
    <button>@Html.ActionLink("Cancel", "Index", "Book") </button>
